{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Go Backend for Debug",
            "type": "shell",
            "command": "go build -gcflags=\"all=-N -l\" -o \"${workspaceFolder}/debug-server\" .",
            "group": {
